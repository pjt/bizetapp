#!/bin/sh

# Make sure you're in the root Compojure dir
cd `dirname $0`

for file in `find . -name *.jar`; do
    jars=$jars:$file
done

classpath=app:$jars

if which rlwrap > /dev/null; then
   rlwrap=rlwrap
else
   rlwrap=
fi

if [ $# -gt 0 ]; then
   $rlwrap java -cp $classpath clojure.main -i boot.clj --repl 
else
   java -cp $classpath clojure.main boot.clj
fi

